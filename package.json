{
  "name": "chaplain",
  "version": "0.3.2",
  "description": "A testing tool for effortless regression tests of HTTP services.",
  "main": "dist/lib/index.js",
  "bin": {
    "chaplain": "dist/lib/cli/chaplain-cli.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "pretest": "gulp --silent",
    "test": "mocha -R dot --recursive dist/test && ./dist/lib/cli/chaplain-cli.js -f dist/test-chaplain/chaplain.tests.js",
    "test-cov": "mocha -R dot --recursive test",
    "coverage": "nyc --require babel-core/register npm run test-cov && nyc report --reporter=html && nyc report --reporter=lcov",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krajzeg/chaplain"
  },
  "keywords": [
    "testing",
    "regression",
    "http",
    "bless",
    "html",
    "json",
    "automated"
  ],
  "author": "Jakub Wasilewski <wasyl@wasyl.eu> (http://wasyl.eu)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krajzeg/chaplain/issues"
  },
  "homepage": "https://github.com/krajzeg/chaplain",
  "dependencies": {
    "bluebird": "^3.0.6",
    "chalk": "^1.1.3",
    "diff": "^2.2.2",
    "good-guy-http": "^1.7.1",
    "hiff": "^0.3.0",
    "inquirer": "^1.0.2",
    "jsondiffpatch": "^0.1.43",
    "lodash": "^3.10.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "babel-core": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "coveralls": "^2.11.9",
    "del": "^2.1.0",
    "express": "^4.13.4",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-changed": "^1.3.0",
    "gulp-chmod": "^1.3.0",
    "gulp-sourcemaps": "^1.6.0",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3",
    "nyc": "^6.4.4"
  }
}
